# Amharic H-Net Production Configuration Template
# Copy this file to .env and configure for your environment

# ===============================
# Application Settings
# ===============================
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
WORKERS=1
DEBUG=false

# ===============================
# Model Configuration
# ===============================
MODEL_PATH=/app/models/test_checkpoint.pt
MODEL_VERSION=1.0.0
ENABLE_MODEL_COMPILATION=true

# ===============================
# Security and Authentication
# ===============================
ENABLE_AUTH=true
API_KEY=your-secure-api-key-change-this-in-production
SECRET_KEY=your-secret-key-change-in-production

# Rate Limiting
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60
BURST_SIZE=10

# CORS and Host Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===============================
# Performance and Caching
# ===============================
ENABLE_CACHING=true
CACHE_TTL=3600
REDIS_URL=redis://redis:6379/0
MAX_BATCH_SIZE=8
REQUEST_TIMEOUT=30
MAX_GENERATION_LENGTH=500
RESPONSE_TIME_TARGET_MS=200

# ===============================
# Monitoring and Observability
# ===============================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO
ENABLE_TRACING=false

# ===============================
# Cultural Safety
# ===============================
ENABLE_CULTURAL_SAFETY=true
CULTURAL_SAFETY_STRICT_MODE=true
MAX_VIOLATION_HISTORY=1000

# ===============================
# Health Checks
# ===============================
HEALTH_CHECK_INTERVAL=30
READINESS_PROBE_TIMEOUT=5

# ===============================
# Resource Limits
# ===============================
MAX_MEMORY_GB=8.0
GPU_MEMORY_FRACTION=0.8

# ===============================
# External Services
# ===============================
# Production Redis (replace with external Redis URL)
# REDIS_URL=redis://your-redis-host:6379/0

# Grafana Configuration
GRAFANA_PASSWORD=secure-grafana-password-change-this

# ===============================
# Development/Testing Only
# ===============================
# Uncomment for development environment
# ENVIRONMENT=development
# DEBUG=true
# ENABLE_AUTH=false
# LOG_LEVEL=DEBUG
# API_KEY=dev_test_key_12345